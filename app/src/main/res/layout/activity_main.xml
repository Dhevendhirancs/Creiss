<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".scanner.MainActivity"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_scan_trip_code"
        android:layout_width="@dimen/button_size"
        android:layout_height="wrap_content"
        android:text="@string/scan_trip_code"
        android:textColor="#000000"
        android:theme="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_gravity="center_vertical"
        android:layout_above="@+id/btn_scan_product_code"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/margin16"/>

    <Button
        android:id="@+id/btn_scan_product_code"
        android:layout_width="@dimen/button_size"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="@string/scan_product_code"
        android:theme="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
        android:layout_gravity="center|center_vertical"
        android:layout_centerInParent="true"/>
</RelativeLayout>
