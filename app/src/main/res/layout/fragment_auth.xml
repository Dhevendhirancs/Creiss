<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/margin16">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/til_authkey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/margin8"
        android:gravity="center"
        app:errorEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/et_authkey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter the key"
            android:imeActionId="@+id/action_verify"
            android:imeActionLabel="@string/str_verify"
            android:imeOptions="actionDone"
            android:inputType="textPassword"
            android:maxLength="100"
            android:maxLines="1"
            android:minLines="1" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/btn_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/til_authkey"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/margin8"
        android:text="@string/str_verify"
        android:theme="@style/Base.Widget.AppCompat.Button.Borderless.Colored" />
</RelativeLayout>